{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "Error": {
    "description": "An error",
    "type": "object",
    "properties": {
      "message": {
        "type": "string",
        "description": "Error message text"
      },
      "type": {
        "type": "string",
        "description": "Error message type"
      },
      "code": {
        "type": "string",
        "description": "Error message code"
      }
    },
    "additionalProperties": false,
    "required": [
      "message"
    ]
  }
}
